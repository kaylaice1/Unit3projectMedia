@model Post
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">Create New Post</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="mb-4">
                            <label for="Title" class="form-label">Title</label>
                            <input type="text" id="Title" name="Title" class="form-control"
                                   placeholder="Enter post title" required />
                        </div>

                        <div class="mb-4">
                            <label for="Content" class="form-label">Content</label>
                            <textarea id="Content" name="Content" class="form-control" rows="6"
                                      placeholder="Write your post content here..." required></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="List" class="btn btn-light me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Publish Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>